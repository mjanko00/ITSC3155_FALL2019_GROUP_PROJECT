<html>
  <body class ="mainFont">
    <header class = "banner">
    
    </header>
    
    <div class="main">
      
     <div class="row">
      <h1>Food Entries</h1>
      <div class="pull-right range-query">
          <%= form_tag journals_path, method: :get do %>
           <%= text_field_tag 'search[date_from]', @search.date_from %>
           <%= text_field_tag 'search[date_to]', @search.date_to %>
           <%= submit_tag 'Search', class: 'button' %>
          <% end %>
    </div>
      </div>
      <br>
      
      <div class="tableDiv">
        <table>
          <tr id = "tableHeader">
            <th>Date</th>
            <th>Meal Type</th>
            <th>Food Item</th>
            <th>Serving Size</th>
            <th>Calories</th>
            <th>Proteins</th>
            <th>Carbs</th>
            <th>Fats</th>
            <th>Author</th>
            <th>Tools</th>
          </tr>

        <% @journals.each do |journal| %>
          <tr>
            <td><%= journal.date.strftime("%Y-%m-%d") %></td>
            <td><%= journal.meal_type %></td>
            <td><%= journal.food_item %></td>
            <td><%= journal.serving %></td>
            <td><%= journal.cal %></td>
            <td><%= journal.prot %></td>
            <td><%= journal.carbs %></td>
            <td><%= journal.fats %></td>
            <td><% if journal.user %>
                  <%= journal.user.name %>
                <% end %>
            </td>
            <td id="tools">
                <%= link_to 'Show', journal_path(journal), class: 'button' %>
                <%= link_to 'Edit', edit_journal_path(journal), class: 'button' %>
                <%= link_to 'Delete', 
                                      journal_path(journal), 
                                      method: :delete, 
                                      data: { confirm: 'Are you sure?' }, class: 'button' %></td>
          </tr>
        <% end %>
        </table>
      </div>
      <br>
      <h3>Total Calories: <%= total_cal %></h3>
      <h3>Total Protein: <%= total_protein %></h3>
      <h3>Total Fat: <%= total_fat %></h3>
      <h3>Total Carbs: <%= total_carbs %></h3>
      
      <%= link_to 'New Journal Entry', new_journal_path, class: 'button' %>
    </div>
  </body>
</html>